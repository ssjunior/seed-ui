@div class=absolute inset-0 -z-10
  {?background}
@div class=relative text-center max-w-3xl mx-auto px-4 sm:px-6 space-y-4 sm:space-y-6
  {?pill}
  @h1 as=h1, class=text-3xl sm:text-4xl md:text-5xl font-bold leading-tight
    {?title}
  @p as=p, class=text-base sm:text-lg opacity-90
    {?subtitle}
  @div class=flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center
    {?actions}
